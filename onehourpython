#!/usr/bin/python
# -*- coding: UTF-8 -*-

for i in range(1,5): #i在1~4
	for j in range(1,5): #j在1~4
		for k in range(1,5): #k在1~4
			if(i!=j) and (j!=k) and (i!=k): #如果三數皆不相等
				print(i,j,k)
